<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ListView
            android:layout_width="393dp"
            android:layout_height="630dp"
            android:id="@+id/listViewMusic" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="1dp"/>
    <RelativeLayout
            android:layout_width="392dp"
            android:layout_height="151dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp" app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp" tools:srcCompat="@drawable/victory_tsfh"
                android:id="@+id/image_now_playing"/>
        <TextView
                android:text="MusicName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_marginStart="134dp" android:id="@+id/title_now_playing" android:textSize="24sp"/>
        <TextView
                android:text="Artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_marginStart="134dp" android:layout_alignParentBottom="true"
                android:layout_marginBottom="105dp" android:id="@+id/Artist"/>
        <SeekBar
                android:layout_width="224dp"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_marginStart="148dp" android:id="@+id/seekBar" android:layout_alignParentBottom="true"
                android:layout_marginBottom="80dp"/>
        <TextView
                android:text="0:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentBottom="true"
                android:layout_marginBottom="121dp" android:id="@+id/textTime" android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"/>
        <ImageButton
                android:layout_width="62dp"
                android:layout_height="56dp" app:srcCompat="@drawable/icon_prev"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/imageButton3" android:layout_alignParentStart="true"
                android:layout_marginStart="139dp" android:layout_alignParentBottom="true"
                android:layout_marginBottom="9dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_media_pause"
                android:layout_alignParentEnd="true" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="112dp" android:id="@+id/button_pause" android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp" android:onClick="musicPause"/>
        <ImageButton
                android:layout_width="49dp"
                android:layout_height="45dp" app:srcCompat="@drawable/icon_next"
                android:layout_alignParentEnd="true" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="43dp" android:id="@+id/imageButton5" android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_media_play"
                android:layout_alignParentEnd="true" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="111dp" android:id="@+id/button_play" android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp" android:onClick="musicPlay"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>