<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <ImageView
            android:layout_width="103dp"
            android:layout_height="106dp" tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/imageView"
            android:padding="10dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="5dp"/>
    <TextView
            android:text="Name"
            app:layout_constraintLeft_toRightOf="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" android:id="@+id/Name" android:textSize="24sp"/>
    <TextView
            app:layout_constraintLeft_toRightOf="@+id/imageView"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Artist_now_playing"
            android:text="Artist" app:layout_constraintTop_toBottomOf="@+id/Name"/>
    <TextView
            android:text="0:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/duration"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="7dp"/>
    <ImageView
            android:layout_width="13dp"
            android:layout_height="80dp" app:srcCompat="@drawable/icon_forward" android:id="@+id/choose"
            app:layout_constraintTop_toBottomOf="@+id/duration" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>